{
    "name": "Go & Terraform DevContainer",
    "dockerComposeFile": [
        "docker-compose.devcontainer.yml"
    ],
    "service": "terraform_gcp_gke",
    "workspaceFolder": "/workspace",
    "settings": {
        "go.useLanguageServer": true,
        "go.lintTool": "golangci-lint",
        "editor.formatOnSave": true
    },
    "extensions": [
        "golang.Go",
        "hashicorp.terraform"
    ],
    "remoteUser": "devuser"
}